{$DOMAIN_URL}

root * /srv

handle /api/* {
  reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT}
}

handle /download/* {
  reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT}
}

handle /graphql {
  reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT}
}

handle /ws/* {
  reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT}
}

handle {
  try_files {path} index.html
  file_server
}

encode gzip
log
